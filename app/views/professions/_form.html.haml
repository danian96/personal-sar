= form_with(model: profession, local: true , html: {class: "form-horizontal"}) do |form|
  = render "shared/error_messages", :object => profession
  .col-md-12
    .form-group.row
      .col-md-3.text-right
        %label.col-form-label{:for => :name} Nombre
      .col-md-9
        = form.text_field :name ,class:"form-control"
  = render "shared/form-actions", :object_path => professions_path, :form =>form
