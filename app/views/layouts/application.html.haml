!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "Sistema de Control de Personal - SAR BOLIVIA", :name => "description"}/
    %meta{:content => "danianmercado@gmail.com", :name => "author"}/
    %title Sistema de Control de Personal - SAR BOLIVIA
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application', media: 'all'

  %body.fix-header.fix-sidebar.card-no-border.logo-center
    = render 'layouts/preloader'
    #main-wrapper
      = render 'layouts/topbar'
      = render 'layouts/left-sidebar'
      .page-wrapper
        .container-fluid
          = render 'layouts/messages'
          = yield
      = render 'layouts/footer'
    = yield :javascript
