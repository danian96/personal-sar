.row
  .col-lg-12
    .card.card-outline-inverse
      .card-header
        %h4.m-b-0.text-white Listado de Tipos de Asistencia
      .card-body
        %h4.card-title Exportar Datos
        %h6.card-subtitle Exportar datos a Clipboard , CSV, Excel, PDF e Imprimir
        .table-responsive.m-t-40
          %table#example23.display.nowrap.table.table-hover.table-striped.table-bordered{:cellspacing => "0", :width => "100%"}
            %thead
              %tr
                %th Nombre Tipo de Asistencia
                %th{:colspan => "1"} Acciones
            %tbody
              - @type_of_assistances.each do |type_of_assistance|
                %tr
                  %td= type_of_assistance.name
                  %td
                    = render "shared/action_column_table", :object_path => edit_type_of_assistance_path(type_of_assistance), :object =>type_of_assistance
        %br/
        = link_to 'Registrar Nuevo Tipo de Asistencia', new_type_of_assistance_path, class: "btn btn-block btn-inverse"
= render "shared/table_helper"
