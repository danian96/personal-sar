.row
  .col-lg-12
    .card.card-outline-inverse
      .card-header
        %h4.m-b-0.text-white Listado de Estados Civiles
      .card-body
        %h4.card-title Exportar Datos
        %h6.card-subtitle Exportar datos a Clipboard , CSV, Excel, PDF e Imprimir
        .table-responsive.m-t-40
          %table#example23.display.nowrap.table.table-hover.table-striped.table-bordered{:cellspacing => "0", :width => "100%"}
            %thead
              %tr
                %th Nombre Estado Civil
                %th{:colspan => "1"} Acciones
            %tbody
              - @civil_states.each do |civil_state|
                %tr
                  %td= civil_state.name
                  %td
                    = render "shared/action_column_table", :object_path => edit_civil_state_path(civil_state), :object =>civil_state
        %br/
        = link_to 'Registrar Nuevo Estado Civil', new_civil_state_path, class: "btn btn-block btn-inverse"
= render "shared/table_helper"
