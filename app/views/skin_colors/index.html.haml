.row
  .col-lg-12
    .card.card-outline-inverse
      .card-header
        %h4.m-b-0.text-white Listado de Colores de Piel
      .card-body
        %h4.card-title Exportar Datos
        %h6.card-subtitle Exportar datos a Clipboard , CSV, Excel, PDF e Imprimir
        .table-responsive.m-t-40
          %table#example23.display.nowrap.table.table-hover.table-striped.table-bordered{:cellspacing => "0", :width => "100%"}
            %thead
              %tr
                %th Nombre Color de Piel
                %th{:colspan => "1"} Acciones
            %tbody
              - @skin_colors.each do |skin_color|
                %tr
                  %td= skin_color.name
                  %td
                    = render "shared/action_column_table", :object_path => edit_skin_color_path(skin_color), :object =>skin_color
        %br/
        = link_to 'Registrar Nuevo Color de Piel', new_skin_color_path, class: "btn btn-block btn-inverse"
= render "shared/table_helper"
