.row
  .col-lg-12
    .card.card-outline-inverse
      .card-header
        %h4.m-b-0.text-white Listado de Formas de Boca
      .card-body
        %h4.card-title Exportar Datos
        %h6.card-subtitle Exportar datos a Clipboard , CSV, Excel, PDF e Imprimir
        .table-responsive.m-t-40
          %table#example23.display.nowrap.table.table-hover.table-striped.table-bordered{:cellspacing => "0", :width => "100%"}
            %thead
              %tr
                %th Nombre Forma de Boca
                %th{:colspan => "1"} Acciones
            %tbody
              - @mouth_shapes.each do |mouth_shape|
                %tr
                  %td= mouth_shape.name
                  %td
                    = render "shared/action_column_table", :object_path => edit_mouth_shape_path(mouth_shape), :object =>mouth_shape
        %br/
        = link_to 'Registrar Nueva Forma de Boca', new_mouth_shape_path, class: "btn btn-block btn-inverse"
= render "shared/table_helper"
