.row
  .col-lg-12
    .card.card-outline-inverse
      .card-header
        %h4.m-b-0.text-white Listado de Grados de Estudio
      .card-body
        %h4.card-title Exportar Datos
        %h6.card-subtitle Exportar datos a Clipboard , CSV, Excel, PDF e Imprimir
        .table-responsive.m-t-40
          %table#example23.display.nowrap.table.table-hover.table-striped.table-bordered{:cellspacing => "0", :width => "100%"}
            %thead
              %tr
                %th Nombre Grado de Estudio
                %th{:colspan => "1"} Acciones
            %tbody
              - @study_grades.each do |study_grade|
                %tr
                  %td= study_grade.name
                  %td
                    = render "shared/action_column_table", :object_path => edit_study_grade_path(study_grade), :object =>study_grade
        %br/
        = link_to 'Registrar Nuevo Grado de Estudio', new_study_grade_path, class: "btn btn-block btn-inverse"
= render "shared/table_helper"
